	$(ROBOT) merge -I http://purl.obolibrary.org/obo/cl/cl-base.owl \
		 annotate --annotation owl:versionInfo $(VERSION) --output $(TMPDIR)/$@.owl

$(COMPONENTSDIR)/cl.owl: component-download-cl.owl $(TMPDIR)/stamp-component-cl.owl
	@if cmp -s $(TMPDIR)/component-download-cl.owl.owl $(TMPDIR)/component-download-cl.owl.tmp.owl ; then \
	        echo "Component identical." ; \
	else \
	        echo "Component different, updating." && \
	        cp $(TMPDIR)/component-download-cl.owl.owl $(TMPDIR)/component-download-cl.owl.tmp.owl && \
	        $(ROBOT) annotate --input $(TMPDIR)/component-download-cl.owl.owl \
	                          --ontology-iri $(ONTBASE)/$@ $(ANNOTATE_ONTOLOGY_VERSION) \
	                          --output $@ ; \
	fi
