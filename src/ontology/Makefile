		 annotate --annotation owl:versionInfo $(VERSION) --output $(TMPDIR)/$@.owl

$(COMPONENTSDIR)/xpo.owl: component-download-xpo.owl $(TMPDIR)/stamp-component-xpo.owl
	@if cmp -s $(TMPDIR)/component-download-xpo.owl.owl $(TMPDIR)/component-download-xpo.owl.tmp.owl ; then \
