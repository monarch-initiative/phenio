	        echo "Component identical." ; \
	else \
	        echo "Component different, updating." && \
	        cp $(TMPDIR)/component-download-fypo.owl.owl $(TMPDIR)/component-download-fypo.owl.tmp.owl && \
	        $(ROBOT) annotate --input $(TMPDIR)/component-download-fypo.owl.owl \
